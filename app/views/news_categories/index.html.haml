.mx-auto
  - if notice
    .alert.alert-primary.alert-dismissible.fade.show{role: "alert"}
      = notice
      %button.btn.btn-secondary{type: "button", class: "close small", data: {dismiss: "alert"}, aria: {label: "close"} }
        %span{aria: { hidden: "true"} } âœ•
  %h2.py-2.text-center
    Index NewsCategories
  %table.table.table-striped.table-hover.table-sm
    %thead.thead-dark
      %tr
        %th Name
        %th{:colspan => "3"}
    %tbody
      - @news_categories.each do |news_category|
        %tr{:class => "document_#{news_category.id}"}
          %td= news_category.name
          %td= link_to 'Show', news_category, role: "button", class: "btn btn-outline-info btn-sm"
          %td= link_to 'Edit', edit_news_category_path(news_category), role: "button", class: "btn btn-outline-secondary btn-sm"
          %td= link_to 'Destroy', news_category, method: :delete, data: { confirm: 'Are you sure?' }, role: "button", class: "btn btn-outline-danger btn-sm"
  %hr
  .actions.text-center.mb-3
    = link_to 'New NewsCategory', new_news_category_path, class: "btn btn-primary btn-lg"

