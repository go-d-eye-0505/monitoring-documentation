= form_with(model: news_category, local: true) do |form|
  - if news_category.errors.any?
    #error_explanation
      %h2
        = pluralize(news_category.errors.count, "error")
        prohibited this news_category from being saved:
      %ul
        - news_category.errors.full_messages.each do |message|
          %li= message
  .field.mb-3
    = form.label :name
    = form.text_field :name, class: "form-control", placeholder: "document name"
  .actions.text-center.mb-3
    = form.submit class: "btn btn-primary btn-lg"
